{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb", "prettier"],
    "plugins": ["prettier"],
    "parserOptions":{
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "describe" : "readonly",
        "it" : "readonly",
        "expect" : "readonly"
    },
    "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": "warn",
        "no-undef" : 2,
        "no-console": "off",
        "func-names": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off"
    }
}